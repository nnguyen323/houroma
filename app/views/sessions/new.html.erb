<%= stylesheet_link_tag :landing_pages %>
<% provide(:title, "Log in") %>
    <h2 class="text-center center-absolute">Sign In</h2>
    <!-- <div class="center-form col-xs-8 col-xs-offset-2 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4"> -->
    <div class ="center-form">
        <div class="text-center" style="padding-bottom:30px;">
          <%= image_tag 'default-thumb-120.png' %>
        </div>
    	  <%= form_for(:session, url: login_path) do |f| %>
        <%= f.label :email_username, "Email or Username" %>
        <%= f.text_field :email_username, class: 'form-control' %>

        <%= f.label :password %>
        <%= link_to "(forgot password)", new_password_reset_path %>
        <%= f.password_field :password, class: 'form-control' %>
        
        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me, class: "check-left" %>
          <span>Remember me on this computer</span>
        <% end %>
        
        <%= f.submit "Sign in", class: "btn-lg btn-primary" %>
      <% end %>

      <p>New user? <%= link_to "Sign up now.", signup_path %></p>
    </div>
  </div>

