<%= form_for(rating.rates.build, remote: true) do |f| %>
  <%= hidden_field_tag :rating_id, rating.id %>
  <%= hidden_field_tag :up, 'true' %>
  <button class="up-vote" type="submit" onclick="plus_one('rating-<%= rating.id %>');">
    <i class="fa fa-arrow-circle-up"> </i>
  </button>
<% end %>
<%= form_for(rating.rates.build, remote: true) do |f| %>
  <%= hidden_field_tag :rating_id, rating.id %>
  <%= hidden_field_tag :up, 'false' %>
  <button class="down-vote" type="submit" onclick="minus_one('rating-<%= rating.id %>');">
    <i class="fa fa-arrow-circle-down"> </i>
  </button>
<% end %>