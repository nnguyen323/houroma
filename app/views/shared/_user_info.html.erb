<div class="avatar">
<% if current_user.picture? %>
  <%= image_tag current_user.picture.thumb_small.url %>
<% else %>
  <%= image_tag 'default-thumb-50.png' %>
<% end %>
</div>
<h1><%= current_user.username %></h1>
<span><%= link_to "view my profile", current_user %></span>
<span><%= pluralize(current_user.activities.count, "activity") %></span>