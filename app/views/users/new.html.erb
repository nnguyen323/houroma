<%= stylesheet_link_tag :landing_pages %>

<% provide(:title, "Sign up") %>
    <h2 class="text-center center-absolute"><span style="color:#1276b9">Short</span> Registration</h2>

    <!-- <div class="center-form col-xs-8 col-xs-offset-2 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4"> -->
    <div class="center-form">
			<%= form_for(@user) do |f| %>
				<%= render 'shared/error_messages', object: f.object %>

				<div class="text-center" style="font-size:20px; padding-bottom:10px;">

					<span style="color:#1276b9">Time</span> is valuable
				</div>
				<br>

				<%= f.label :username %>
				<%= f.text_field :username, class: 'form-control' %>

				<%= f.label :email %>
				<%= f.email_field :email, class: 'form-control' %>

				<%= f.label :password %>
				<%= f.password_field :password, class: 'form-control' %>

				<%= f.label :password_confirmation, "Confirm Password" %>
				<%= f.password_field :password_confirmation, class: 'form-control' %>

				<%= f.submit "Create my account", class: "btn-lg btn-primary" %>
			<% end %>
	</div>
